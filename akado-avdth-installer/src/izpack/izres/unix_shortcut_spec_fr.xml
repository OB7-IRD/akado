<shortcuts>
<skipIfNotSupported/>   
  <programGroup defaultName="Observatoire Thonier/AKaDo"
  location="applications"/>
  <shortcut
     name="AKaDo 2"
     programGroup="yes"
     desktop="yes"
     applications="no"
     startMenu="yes"
     startup="no"
     target="$INSTALL_PATH/akado.sh"
     commandLine=""
     workingDirectory="$INSTALL_PATH"
     description="Lance AKaDo 2 en mode graphique"
     iconFile="$INSTALL_PATH/icons/akado.png"
     iconIndex="0"
     type="Application"
     encoding="UTF-8"
     terminal="true"
     KdeSubstUID="false"
     initialState="normal">
     <createForPack name="Core"/>
   </shortcut>

    <shortcut
        name="Documentation"
        programGroup="yes"
        desktop="yes"
        applications="no"
        startMenu="yes"
        startup="no"
        target="open"
        workingDirectory=""
        commandLine="$INSTALL_PATH/doc/AKaDo_guide_utilisateur.pdf"
        initialState="noShow"
        iconFile="$INSTALL_PATH/icons/akado-doc.png"
        iconIndex="0"
        url="$INSTALL_PATH/doc/AKaDo_guide_utilisateur.pdf"
        type="Link"
        encoding="UTF-8"
        description="Manuel utilisateur d'AKaDo (PDF format)">

        <createForPack name="Documentation-PDF"/>
    </shortcut>

    <shortcut
        name="Uninstaller"
        programGroup="yes"
        desktop="yes"
        applications="no"
        startMenu="no"
        startup="no"
        target="$INSTALL_PATH/uninstall.sh"
        commandLine=""
        initialState="noShow"
        iconFile="trashcan_full"
        iconIndex="0"
        workingDirectory=""
        type="Application"
        encoding="UTF-8"
        description="Desinstaller AKaDo">
        <createForPack name="Core" />
    </shortcut>

</shortcuts>